# Make CapsLock a Escape key
setxkbmap -option caps:escape

# Set proper TERM
case "$TERM" in
   xterm) TERM=xterm-256color ;;
esac

# Configure fzf fuzzy search
#export FZF_DEFAULT_OPTS='--height 40% --border --reverse'
# --files: List files that would be searched but do not search
# --no-ignore: Do not respect .gitignore, etc...
# --hidden: Search hidden files and folders
# --follow: Follow symlinks
# --smart-case: Searches case insensitively if pattern is all lowercase. Case sensitive otherwise.
# --glob: Additional conditions for search (in this case ignore everything in the .git/ folder)
export FZF_DEFAULT_COMMAND='rg --files --hidden --no-ignore --follow --smart-case --glob "!.git/*"'

export FZF_DEFAULT_OPTS="
--layout=reverse
--info=inline
--height=50%
--border
--multi
--preview-window=:hidden
--preview '([[ -f {} ]] && (bat --style=numbers --color=always {} || cat {})) || ([[ -d {} ]] && (tree -C {} | less)) || echo {} 2> /dev/null | head -200'
--color='hl:148,hl+:154,pointer:032,marker:010,bg+:237,gutter:008'
--prompt='∼ '
--bind '?:toggle-preview'
--bind 'ctrl-a:select-all'
--bind 'ctrl-y:execute-silent(echo {+} | pbcopy)'
--bind 'ctrl-e:execute(echo {+} | xargs -o vim)'
--bind 'ctrl-v:execute(code {+})'
"
#--prompt='∼ ' --pointer='▶' --marker='✓'

[ -f ~/.fzf.bash ] && source ~/.fzf.bash
bind -x '"\C-p": vim $(fzf);'
