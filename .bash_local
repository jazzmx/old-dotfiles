
#set -o vi
export EDITOR=vi
export PAGER='/usr/bin/less'
export LESS='-isrM -F -X'

PS1='${debian_chroot:+($debian_chroot)}\[\e[1;32m\]\u\[\e[0m\] \[\e[1;34m\][\w]\n\[\e[1;33m\]$(__git_ps1 "(%s)")\$\[\e[0m\] '


# Make CapsLock a Ctrl key
setxkbmap -option ctrl:nocaps
# Make Ctrl keys an escape key when press alone
if [ -z "$(pgrep xcape)" ]; then
   [ "$(which xcape)" ] && xcape -e 'Control_L=Escape'
fi

# Set proper TERM
case "$TERM" in
   xterm) TERM=xterm-256color ;;
esac

# Configure fzf fuzzy search
