[alias]

   editcfg = config --global -e
   aliases = config --get-regexp alias

   b = branch
   ba = branch -a
   br = branch -r
   s  = status
   ss = status --short --branch
   c  = commit
   cm = commit -m
   cmu = !git add -u && git commit -m
   cma = !git add -A && git commit -m
   co = checkout
   cb = checkout -b
   f = fetch
   ft = fetch --tags
   p  = push
   pf = push --force
   pt = push --tags
   pft = push --force --tags
   pp = pull --prune
   d  = diff
   dc = diff --cached
   ds = diff --staged
   di = diff -b -w --ignore-blank-lines --ignore-space-at-eol
   ls = ls-files
   lsi = ls-files --others --i --exclude-standard

   amend = commit --amend
   pick = cherry-pick
   undo = reset HEAD~1 --mixed
   graph = log --graph --oneline
   head = log -n1

   save = !git add -u && git commit -m 'SAVEPOINT'
   save-all = !git add -A && git commit -m 'SAVEPOINT'

   vdiff = difftool
   upd = !git pull --rebase --prune $@ && git submodule update --init --recursive
   wipe = !git add -A && git commit -qm 'WIPE SAVEPOINT' && git reset HEAD~1 --hard
   bclean = "!f() { git branch --merged ${1-master} | grep -v " ${1-master}$" | xargs -r git branch -d; }; f"
   bdone = "!f() { git checkout ${1-master} && git up && git bclean ${1-master}; }; f"
   remove-untracked = "!f() { git branch -vv | grep ': gone]' | awk '{print $1}' | xargs git branch -d; }; f"

   lg = log --graph --pretty=format:'%C(bold green)%h%Creset - %s %Cgreen(%cr) %C(bold blue)<%an>%Creset %C(yellow)%d%Creset' --abbrev-commit
   lg1 = !"git lg1-specific --all"
   lg2 = !"git lg2-specific --all"
   lg3 = !"git lg3-specific --all"
   lg1-specific = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(auto)%d%C(reset)'
   lg2-specific = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(auto)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)'
   lg3-specific = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset) %C(bold cyan)(committed: %cD)%C(reset) %C(auto)%d%C(reset)%n''          %C(white)%s%C(reset)%n''          %C(dim white)- %an <%ae> %C(reset) %C(dim white)(committer: %cn <%ce>)%C(reset)'

