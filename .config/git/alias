[alias]

   editcfg = config --global -e
   aliases = config --get-regexp alias

   ap = add --patch
   b  = branch
   ba = branch -a
   br = branch -r
   s  = status
   ss = status --short --branch
   c  = commit
   cm = commit -m
   cum = !git add -u && git commit -m
   cam = !git add -A && git commit -m
   co = checkout
   cob = checkout -b
   f = fetch
   ft = fetch --tags
   p  = push
   pf = push --force
   pt = push --tags
   pft = push --force --tags
   pu = push -u origin HEAD
   pp = pull --prune
   d  = diff
   dc = diff --cached
   ds = diff --staged
   di = diff -b -w --ignore-blank-lines --ignore-space-at-eol
   vd = difftool
   ls = ls-files
   lsi = ls-files --others --i --exclude-standard
   root = rev-parse --show-toplevel

   amend = commit --amend
   pick = cherry-pick
   undo = reset HEAD~1 --mixed
   graph = log --graph --oneline
   head = log -n1

   save = !git add -u && git commit -m 'SAVEPOINT'
   save-all = !git add -A && git commit -m 'SAVEPOINT'

   upd = !git pull --rebase --prune $@ && git submodule update --init --recursive
   wipe = !git add -A && git commit -qm 'WIPE SAVEPOINT' && git reset HEAD~1 --hard
   bclean = "!f() { git branch --merged ${1-master} | grep -v " ${1-master}$" | xargs -r git branch -d; }; f"
   bdone = "!f() { git checkout ${1-master} && git up && git bclean ${1-master}; }; f"
   rm-untracked = "!git fetch --prune && git branch --merged | grep -v master >/tmp/merged-branches && vi /tmp/merged-branches && xargs git branch -d </tmp/merged-branches"

   lg-specific = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(auto)%d%C(reset)'
   lg = !"git lg-specific --all"
   lgg-specific = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(auto)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)'
   lgg = !"git lgg-specific --all"
   lggg-specific = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset) %C(bold cyan)(committed: %cD)%C(reset) %C(auto)%d%C(reset)%n''          %C(white)%s%C(reset)%n''          %C(dim white)- %an <%ae> %C(reset) %C(dim white)(committer: %cn <%ce>)%C(reset)'
   lggg = !"git lggg-specific --all"

   fzf = "!f() { git-fzf.sh $@ }; f"

   #quick look at all repo
   lgsa = log --color --date-order --graph --oneline --decorate --simplify-by-decoration --all
   #extend look at all repo
   lga  = log --color --date-order --graph --oneline --decorate --all

