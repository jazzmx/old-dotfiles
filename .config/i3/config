# CUSTOM ACTIONS ====================================================
#
# Default applications
set $term i3-sensible-terminal
set $browser google-chrome
set $logout ~/bin/session
set $kbdlayout ~/bin/kbdlayout
# reload the configuration file
bindsym $mod+Shift+c   reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r   restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+q   exec $logout
# kill focused window
bindsym $mod+q         kill
# start a terminal
bindsym $mod+Return    exec $term
# start a browser
bindsym $mod+b         exec $browser
# lock screen
bindsym $mod+Escape    exec --no-startup-id i3lock -e -f -c 000000
# application menu (program launcher)
bindsym $mod+a         exec "rofi -modi run,drun,ssh -show run"
# application menu (program launcher)
bindsym $mod+Shift+a   exec "rofi -modi run,drun,ssh -show drun"
# Alt-tab for opened windows menu
bindsym $alt+Tab       exec rofi -modi window -show window -show-icons
# Switch keyboard layout
bindsym $mod+z         exec --no-startup-id $kbdlayout
# Media keys
bindsym XF86Explorer   exec caja
bindsym XF86HomePage   exec $browser
bindsym XF86Calculator exec gnome-calculator
bindsym XF86Tools      exec spotify
bindsym XF86AudioPlay  exec playerctl play-pause
bindsym XF86AudioStop  exec playerctl stop
bindsym XF86AudioPrev  exec playerctl previous
bindsym XF86AudioNext  exec playerctl next
bindsym XF86AudioMute  exec --no-startup-id pactl set-sink-mute 0 toggle
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5%
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5%
# Screenshots
bindsym --release Print exec --no-startup-id maim -s | xclip -selection clipboard -t image/png
bindsym --release $mod+Print exec --no-startup-id maim -i $(xdotool getactivewindow) ~/Pictures/Screenshots/$(date +%s).png
bindsym --release Control+Print exec --no-startup-id maim -s ~/Pictures/Screenshots/$(date +%s).png

# Define scratchpad
for_window [instance="dropdown"] floating enable, resize set 1200 600, border pixel 5, move scratchpad
bindsym $mod+s [instance="dropdown"] scratchpad show, move position center 
