# CUSTOM ACTIONS ====================================================
#
# reload the configuration file
bindsym $mod+Shift+c   reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r   restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+q   exec $logout
# kill focused window
bindsym $mod+q         kill
# start a terminal
bindsym $mod+Return    exec $TERMINAL
# start a browser
bindsym $mod+b         exec $BROWSER
# lock screen
bindsym $mod+Escape    exec --no-startup-id i3lock -e -f -c 000000 -i $wallpaper
# application menu (program launcher)
bindsym $mod+a         exec "rofi -modi run,drun,ssh -show run"
# application menu (program launcher)
bindsym $mod+Shift+a   exec "rofi -modi run,drun,ssh -show drun"
# Alt-tab for opened windows menu
bindsym $alt+Tab       exec rofi -modi window -show window -show-icons
# Switch keyboard layout
bindsym $mod+z         exec --no-startup-id $kbdlayout toggle
# Web search dmenu script
bindsym $mod+g         exec --no-startup-id $websearch
# Media keys
bindsym XF86Explorer   exec spacefm
bindsym XF86HomePage   exec $BROWSER
bindsym XF86Calculator exec gnome-calculator
bindsym XF86Tools      exec spotify
bindsym XF86AudioPlay  exec playerctl play-pause
bindsym XF86AudioStop  exec playerctl stop
bindsym XF86AudioPrev  exec playerctl previous
bindsym XF86AudioNext  exec playerctl next
bindsym XF86AudioMute  exec --no-startup-id pactl set-sink-mute 0 toggle
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5%
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5%
bindsym $mod+m [class="Thunderbird"] focus
