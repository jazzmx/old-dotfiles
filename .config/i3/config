# Define ranger scratchpad
for_window [instance="ranger"] floating enable, resize set 1600 600, border pixel 5, move scratchpad, move position 150px 470px
bindsym $mod+e [instance="ranger"] scratchpad show
# Define terminal scratchpad
for_window [instance="dropdown"] floating enable, resize set 1200 600, border pixel 5, move scratchpad, move position 300px 20px
bindsym $mod+Space [instance="dropdown"] scratchpad show
bindcode $mod+49 [instance="dropdown"] scratchpad show
