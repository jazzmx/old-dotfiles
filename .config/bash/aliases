function vix {
   touch $1; chmod 751 $1; vim $1
}

alias diff='diff --color -u'
function vdiff() {
   if [ "${#}" -ne 2 ] ; then
      echo "Missing arguments."
      echo "USage:  vdiff a b"
      return 1
   fi

   local left="${1}"
   local right="${2}"

   if [ -d "${left}" ] && [ -d "${right}" ]; then
      vim +"DirDiff ${left} ${right}"
   else
      vim -d "${left}" "${right}"
   fi
}

