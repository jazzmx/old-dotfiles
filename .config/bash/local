
#set -o vi

PS1='${debian_chroot:+($debian_chroot)}\[\e[1;32m\]\u\[\e[0m\] \[\e[1;34m\][\w]\n\[\e[1;33m\]$(__git_ps1 "(%s)")\$\[\e[0m\] '

# Make CapsLock a Escape key
setxkbmap -option caps:escape

# Set proper TERM
case "$TERM" in
   xterm) TERM=xterm-256color ;;
esac

# colored GCC warnings and errors
export GCC_COLORS='error=01;31:warning=01;33:note=01;36:caret=01;32:locus=01:quote=01'

#
# FZF Config
#
export FZF_DEFAULT_COMMAND='rg --files --hidden --no-ignore --follow --smart-case --glob "!.git/*"'

export FZF_DEFAULT_OPTS="
--layout=reverse
--info=inline
--height=50%
--border
--multi
--preview-window=:hidden
--preview '([[ -f {} ]] && (bat --style=numbers --color=always {} || cat {})) || ([[ -d {} ]] && (tree -C {} | less)) || echo {} 2> /dev/null | head -200'
--color='hl:148,hl+:154,pointer:032,marker:010,bg+:237,gutter:008'
--prompt='∼ '
--bind '?:toggle-preview'
--bind 'ctrl-a:select-all'
--bind 'ctrl-y:execute-silent(echo {+} | pbcopy)'
--bind 'ctrl-e:execute(echo {+} | xargs -o vim)'
--bind 'ctrl-v:execute(code {+})'
"
#--prompt='∼ ' --pointer='▶' --marker='✓'

[ -f ~/.fzf.bash ] && source ~/.fzf.bash
bind -x '"\C-p": vim $(fzf);'

mkd() {
   mkdir -p $1 && cd $1
}

