#!/bin/bash

CHOICES=(
logout
reboot
shutdown
suspend
hibernate
)

options="-i -width -22 -hide-scrollbar -bw 5"
choice=$( (IFS=$'\n'; echo "${CHOICES[*]}") | rofi -dmenu $options -lines ${#CHOICES[@]})

[ "$(pgrep bspwm)" ] && logoutcmd="bspc quit" || logoutcmd="i3-msg exit"

case $choice in
   logout) exec $logoutcmd ;;
   reboot) systemctl reboot ;;
   shutdown) systemctl poweroff ;;
   suspend) systemctl suspend ;;
   hibernate) systemctl hibernate ;;
esac

