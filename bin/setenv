#!/bin/bash


buildroot() {
   local version
   [ -z "$1" ] && version="2014.11" || version="$1"
   case "$version" in
      "2014.11") export BUILDROOT_DIR="${HOME}/work/proj/buildroot/2014.11" ;;
      "2015.11") export BUILDROOT_DIR="${HOME}/work/proj/buildroot/2015.11" ;;
   esac
   [ "$(find /media/ca-rd-ifw/pkgsrc -type f)" ] && {
      export BR_DOWNLOAD_DIR="/media/ca-rd-ifw/pkgsrc"
   } || {
      export BR_DOWNLOAD_DIR="${HOME}/work/proj/pkgsrc"
   }
   export JLEVEL=4
}

setPrompt() {
   export PROMPT_ID="$1"
   [ "$BASH" ] && export BR_PS1='${debian_chroot:+($debian_chroot)}\[\e[1;32m\]\u\[\e[0m\] \[\e[1;34m\][\w] \[\e[1;33m\]$(__git_ps1 "(%s)")\n\[\e[1;31m\][$PROMPT_ID] \$\[\e[0m\] '
   [ "$ZSH" ] && export BR_PS1=$'╭─%F{green}%n%f%F %B%F{blue}[%~]%f $(git_prompt_info)%b\n╰─%F{red}[$PROMPT_ID]%f \$ '
}

proj=$1
brVersion=$2
[ -z "$proj" ] && echo "Must specify project..." && return 1

case $proj in

   map)
      source /opt/arago/linux-devkit/environment-setup
      export PATH="/opt/arago/linux-devkit/bin/:$PATH"
      export CXX=${CPP}
      export CFLAGS="-I${SYSROOT_DIR}/usr/include -I${SYSROOT_DIR}/usr/local/include"
      export CXXFLAGS="-I${SYSROOT_DIR}/usr/include -I${SYSROOT_DIR}/usr/local/include"
      setPrompt map3901
      ;;

   map-oe)
      export PATH="/home/mlangloi/work/proj/map-3901/map-3901/tools/sdcard:/opt/arago/linux-devkit/bin:$PATH"
      cd ${HOME}/work/proj/map-3901/oe/build
      source conf/setenv map3901
      setPrompt map3901-oe
      ;;

   cpu*|cpu3*)
      setPrompt "BR:cpueth3"
      buildroot 2014.11
      if grep dds <<< $proj; then
         export BUILDROOT_CONF_NAME=cpueth3-dds_defconfig
      fi
      #export FPGA_DIR=/media/ca-ops-data/projets/3034_Densite3+_CPU-ETH3/FPGA/autobuild/halo
      cd ${HOME}/work/proj/cpueth3
      source env/setenv
      ;;

   stargate)
      setPrompt "BR:stargate"
      buildroot 2014.11
      export FPGA_DIR=${HOME}/work/proj/stargate/fpga
      cd ${HOME}/work/proj/stargate
      source env/setenv
      ;;

   ipfrmk)
      setPrompt "BR:ipfrmk"
      buildroot 2014.11
      cd ${HOME}/work/proj/ipfrmk
      source repos/setenv
      ;;

   ifm)
      setPrompt "BR:ifm"
      buildroot 2014.11
      cd ${HOME}/work/proj/ifm2t
      source repos/setenv
      ;;

   uhd)
      setPrompt "BR:uhd3901"
      buildroot 2014.11
      cd ${HOME}/work/proj/uhd3901
      source env/setenv
      ;;

   sme)
      setPrompt "BR:sme1901"
      cd ${HOME}/work/proj/sme1901
      ;;

   *)
      buildroot ${brVersion:=2015.11}
      [ -d "$proj" ] && cd "$proj"
      [ -d ./env ] && { setenv env; return 0; }
      [ -d ./repos ] && { setenv repos; return 0; }
      echo "Unknown project: '$proj'"
      return 1
      ;;

esac


