#!/bin/sh

# Setup monitors
xrandr --output HDMI2 --primary --auto --output HDMI3 --auto --right-of HDMI2
# Setup keyboard
setxkbmap -layout us,ca -variant ,multix -option grp:alt_shift_toggle -option ctrl:nocaps
numlockx on
# swap  mouse middle and right buttons
#xsetroot -cursor_name left_ptr
# load xresources
xrdb -load ~/.Xresources
# Start barrier daemon for mouse/keyboard sharing
barriers -f -d INFO --config $HOME/.config/barrier/barrier.conf --enable-crypto &
# Set background wallpaper
feh --bg-fill ~/.config/wall.png
# start other daemons & apps
copyq &
volumeicon &
unclutter &
nm-applet &
xfce4-notes &
slack &

